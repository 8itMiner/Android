<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f5f5f5"
    android:layout_marginBottom="10dp">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="22dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/four_u_july"
                app:cardElevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@mipmap/falc"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageView" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="July Edition"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/editionName"
                        android:layout_marginStart="20dp"
                        android:layout_alignBottom="@+id/imageView"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="35dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:layout_marginStart="15dp"
                        android:id="@+id/description"
                        android:text="In the July edition of the 4U paper we .... lorem ipsum.
                \nLearn more about the 4U Paper and more cool stuff!!!!"
                        android:layout_marginTop="14dp"
                        android:layout_below="@+id/imageView"
                        android:layout_alignParentEnd="true" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/bottom_banner"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read"
                            android:layout_marginStart="10dp"
                            android:id="@+id/readID"
                            android:background="@drawable/ripple_blank"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="10dp"
                android:id="@+id/four_u_june"
                app:cardElevation="5dp"
                app:cardCornerRadius="3dp"
                android:layout_below="@+id/four_u_july"
                android:layout_alignParentStart="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@mipmap/falc"
                        android:scaleType="centerCrop"
                        android:id="@+id/imageView2" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="30dp"
                        android:text="June Edition"
                        android:textStyle="bold"
                        android:textColor="#fff"
                        android:id="@+id/editionName2"
                        android:layout_marginStart="20dp"
                        android:layout_alignBottom="@+id/imageView2"
                        android:layout_alignParentStart="true"
                        android:layout_marginBottom="35dp" />


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="17dp"
                        android:layout_marginStart="15dp"
                        android:id="@+id/description2"
                        android:text="In the June edition of the 4U paper we .... lorem ipsum.
                \nLearn more about the 4U Paper and more cool stuff!!!!"
                        android:layout_marginTop="14dp"
                        android:layout_below="@+id/imageView2"
                        android:layout_alignParentEnd="true" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="bottom"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        android:background="@drawable/bottom_banner"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentStart="true">

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Read"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/readID2"
                            android:background="@drawable/ripple_blank"
                            android:textColor="@color/colorPrimary"/>
                    </RelativeLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>
