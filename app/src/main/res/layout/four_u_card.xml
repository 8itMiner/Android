<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="7dp"
        android:id="@+id/four_u"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="2dp"
        app:cardCornerRadius="2dp"
        android:layout_marginBottom="5dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <!-- Image banner holder -->
            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imageBanner"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="centerCrop"
                    android:background="@color/colorPrimaryDark"
                    app:srcCompat="@mipmap/background" />

                <TextView
                    android:id="@+id/editionName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/imageBanner"
                    android:layout_alignParentStart="true"
                    android:layout_marginBottom="22dp"
                    android:layout_marginStart="13dp"
                    android:text="July Edition 4U"
                    android:textColor="#fff"
                    android:textSize="27dp" />

            </RelativeLayout>


            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_above="@+id/relativeLayout2"
                android:layout_below="@+id/relativeLayout3"
                android:layout_marginStart="13dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Hmm, I like potatoes and them spicy detailsbecause they are super cool and awesome."
                android:textColor="#000"
                android:textSize="15dp" />


            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:gravity="bottom"
                android:paddingBottom="5dp"
                android:paddingTop="5dp">

                <Button
                    android:id="@+id/readID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/ripple_blank"
                    android:text="Read"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/downloadID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toEndOf="@+id/readID"
                    android:background="@drawable/ripple_blank"
                    android:text="Download"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>