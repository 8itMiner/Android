<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- TODO: Fix design -->


    <!-- CreateRemindereate reminder overlay -->
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationZ="11dp"
        app:cardElevation="2dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/createReminderCard"
        app:cardCornerRadius="2dp"
        android:background="#fff">
        <!-- Content Holder -->
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <!-- Header for reminder creator -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/header"
                    android:background="@color/colorSecondaryAccent"
                    android:layout_height="80dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="18dp"
                        android:text="Create Reminder"
                        android:textColor="#fff"
                        android:textSize="25dp" />
                </RelativeLayout>
                <!-- Reminder Title -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/reminderSubjectFloat"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/header"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/reminderSubject"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="sans-serif"
                        android:hint="Reminder Title"
                        android:inputType="text"
                        android:textSize="15dp" />

                </android.support.design.widget.TextInputLayout>
                <!-- Reminder Body -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/reminderBodyFloat"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/reminderSubjectFloat"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">
                    <EditText
                        android:id="@+id/reminderBody"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="30dp"
                        android:fontFamily="sans-serif"
                        android:hint="Reminder Body"
                        android:inputType="text"
                        android:textSize="15dp" />

                </android.support.design.widget.TextInputLayout>
                <!-- Reminder Date -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/reminderBodyFloat"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/setDate"
                    android:text="01/09/2002" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/setDate"
                    android:layout_alignBottom="@+id/setDate"
                    android:layout_marginStart="40dp"
                    android:layout_toEndOf="@+id/setDate"
                    android:background="@color/colorPrimaryDark"
                    android:textColor="#fff"
                    android:text="Pick Date"
                    android:id="@+id/setDateButton" />
                <!-- Reminder Time -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/setDate"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="40dp"
                    android:id="@+id/setTime"
                    android:text="27:02" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignBaseline="@+id/setTime"
                    android:layout_alignBottom="@+id/setTime"
                    android:layout_alignStart="@+id/setDateButton"
                    android:background="@color/colorPrimaryDark"
                    android:text="Pick Time"
                    android:textColor="#fff"
                    android:id="@+id/setTimeButton" />

                <!-- Tags -->
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/reminderTagFloat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/setTimeButton"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp">

                    <EditText
                        android:id="@+id/setTag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="30dp"
                        android:layout_marginStart="30dp"
                        android:layout_marginTop="22dp"
                        android:hint="Tag"
                        android:textSize="15sp" />
                </android.support.design.widget.TextInputLayout>



                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/reminderTagFloat"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="39dp">
                    <Button
                        android:id="@+id/createReminderButton"
                        android:layout_width="wrap_content"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="#fff"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:layout_height="wrap_content"
                        android:text="Create Reminder" />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:id="@+id/cancelButton"
                        android:textColor="@color/colorPrimary"
                        android:layout_marginLeft="20dp"
                        android:layout_toRightOf="@+id/createReminderButton"
                        android:background="@drawable/ripple_blank"/>
                </RelativeLayout>

            </RelativeLayout>
        </ScrollView>
    </android.support.v7.widget.CardView>

</RelativeLayout>